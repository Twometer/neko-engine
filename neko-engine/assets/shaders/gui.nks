#version 330 core

#begin shared
    vec2 TexCoords;
#end shared

#begin vertex
    layout(location = 0) in vec2 vertexPosition;
    uniform mat4 guiMatrix;

    void main() {
        gl_Position = guiMatrix * vec4(vertexPosition, 0.0f, 1.0f);
        TexCoords = vertexPosition;
    }
#end vertex

#begin fragment
    out vec4 FragColor;
    uniform sampler2D texSampler;

    void main() {
        FragColor = texture(texSampler, TexCoords);
    }
#end fragment